<!-- ReSharper disable once UnusedMember.Global -->
<Window x:Name="AsyncInWpfWindow" x:Class="Aspenlaub.Net.GitHub.CSharp.AsyncWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Horizontal" Width="Auto">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400" Margin="10">
            <TextBox Name="Output" IsEnabled="False" Padding="10" AutomationProperties.AutomationId="AsyncWpfOutputTextBox">
                Press the RUN button in order to witness some fascinating async action!
            </TextBox>
        </ScrollViewer>
        <StackPanel>
            <Button Name="DoSomething" Margin="10" Padding="40,10,40,10" VerticalAlignment="Top" AutomationProperties.AutomationId="AsyncWpfDoSomethingButton">
                _Do Something
            </Button>
            <Button Name="PrimeNumbers" Margin="10" Padding="40,10,40,10" VerticalAlignment="Top" AutomationProperties.AutomationId="AsyncWpfPrimeNumbersButton">
                _Prime Numbers
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
